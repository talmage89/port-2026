{
  "name": "port-2026",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "run-p dev:css dev:server",
    "dev:server": "bun --hot src/server/index.ts",
    "dev:css": "tailwindcss -i src/styles/tailwind.css -o public/tailwind.css --watch --poll",
    "check": "run-s check:lint check:format check:types",
    "check:fix": "run-s check:lint:fix check:format:write check:types",
    "check:lint": "biome check .",
    "check:lint:fix": "biome check --fix .",
    "check:format": "biome format .",
    "check:format:write": "biome format --write .",
    "check:types": "tsc --noEmit",
    "build": "run-s build:css build:server",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o public/tailwind.css --minify",
    "build:server": "bun build src/server/index.ts --outdir dist --target bun",
    "start": "NODE_ENV=production bun dist/index.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@tailwindcss/cli": "^4.1.18",
    "hono": "^4.11.4",
    "nanoid": "^5.1.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^7.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
